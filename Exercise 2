#include <stdio.h>

#define MAX_LENGTH 100

void encryptMessage(char *message) {
    for (int i = 0; message[i] != '\0'; i++) {
        if ((message[i] >= 'A' && message[i] <= 'Z') || (message[i] >= 'a' && message[i] <= 'z') || (message[i] >= '0' && message[i] <= '9')) ) {
            // Shift character three positions to the right in the ASCII table
            message[i] += 3;
        }
    }
}

int main() {
    char message[MAX_LENGTH];

    // Get message input from the user
    printf("Enter a message (max length 100): ");
    fgets(message, MAX_LENGTH, stdin);
    
    // Print original message
    printf("Phrase: %s", message);
    
    // Encrypt the message
    encryptMessage(message);
    
    // Print the encrypted message
    printf("Encrypted Message: %s\n", message);

    return 0;
}
